# Use Node.js 20 Alpine for testing
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Create coverage directory
RUN mkdir -p coverage

# Expose test port
EXPOSE 5173

# Default command runs tests
CMD ["npm", "test"] 